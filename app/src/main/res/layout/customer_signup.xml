<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090808"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="#FF1717"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="416dp"
        android:layout_height="576dp"
        android:layout_marginBottom="2dp"
        android:background="#FFFCFC"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fontFamily="@font/aldrich"
            android:text="Username"
            android:textColor="#040303"
            android:textSize="24sp"
            android:translationX="20dp" />

        <EditText
            android:id="@+id/C_Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:translationX="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fontFamily="@font/aldrich"
            android:text="Email Address"
            android:textColor="#070707"
            android:textSize="24sp"
            android:translationX="20dp" />

        <EditText
            android:id="@+id/C_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:translationX="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fontFamily="@font/aldrich"
            android:text="Password"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            android:translationX="20dp" />

        <EditText
            android:id="@+id/C_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:translationX="20dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fontFamily="@font/aldrich"
            android:text="Phone Number"
            android:textColor="#130C0C"
            android:textSize="24sp"
            android:translationX="20dp" />

        <EditText
            android:id="@+id/Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:translationX="20dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="160dp"
            android:layout_height="61dp"
            android:background="@android:color/black"
            android:drawableRight="?attr/selectableItemBackground"
            android:fontFamily="@font/aldrich"
            android:text="Complete"
            android:textAllCaps="false"
            android:textColor="#FDF8F8"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationX="80dp"
            android:translationY="140dp" />

        <ImageButton
            android:id="@+id/RegisterBtn"
            android:layout_width="80dp"
            android:layout_height="61dp"
            android:background="#F11313"
            android:tint="#FFFFFF"
            android:translationY="79dp"
            app:srcCompat="@android:drawable/ic_menu_send"
            tools:translationX="230dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>